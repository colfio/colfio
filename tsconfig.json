{
    "compilerOptions": {
      "target": "es5",    
      "lib": ["es6", "dom"], // we need this in order to use ES6 structures (e.g. Map)   
      "module": "commonJS",  // will disable imports/exports. If you want to use them, use commonJS
      "outDir": "./www",    
      "sourceMap": true,
      "inlineSources": true,
      "declaration": true,
      "removeComments": false,
      "noImplicitAny": true,
      "noLib": false,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "noFallthroughCasesInSwitch": false,
      "noImplicitReturns": true,
      "allowUnreachableCode": true,
      "downlevelIteration": true // this will enable us to iterate over map
    },
    "include": ["./src/**/*", "./examples/*"],
    "exclude": [
      "node_modules"
    ]
}