{
	"compilerOptions": {
		"strict": true,
		"target": "ES6",
		"module": "ES6",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowJs": true,
		"downlevelIteration": true,
		"importHelpers": true,
		"sourceMap": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"outDir": "./es",
		"rootDirs": [
			"../src",
			"../test"
		]
	},
	"include": [
		"../src/**/*",
		"../tests"
	],
	"exclude": [
		"../node_modules",
		"../dist"
	]
}
